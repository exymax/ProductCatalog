{% extends 'default/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/sign-in.css') }}">
    <style>
        .form-container form {
            min-width: 500px;
        }
    </style>
{% endblock %}

{% block body %}
    <a class="logo alone" href="{{ url('homepage') }}">ProductCatalog</a>

    {% block particles %}
        {{ parent() }}
        <div class="form-container">
            <div class="row">
                <div class="row col s6 push-s3">
                    <div class="col s12"><h2>Recover your password</h2></div>
                    {{ form_start(form, {'class': 'col s12', 'id': "recovery-form-confirm"}) }}

                    <div class="input-field col s12">
                        {{ form_row(form.password.first, { 'class': 'validate' }) }}
                    </div>
                    <div class="input-field col s12">
                        {{ form_row(form.password.second, { 'class': 'validate' }) }}
                    </div>
                    <input type="submit" class="btn btn-block" value="{{ btn_confirm_text }}">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    {% endblock %}
{% endblock body %}

{% if error %}
    {% block javascripts %}
        {{ parent() }}
        {% include 'form-error.html.twig' with {'error': error} %}
    {% endblock %}
{% endif %}