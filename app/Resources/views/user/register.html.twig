{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h2>Register</h2>

                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.plainPassword.first, { 'label': 'Password' }) }}
                    {{ form_row(form.plainPassword.second, { 'label': 'Repeat password' }) }}
                    <button type="submit" class="btn" formnovalidate>Register</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}